procedure TForm2.BitBtn1Click(Sender: TObject);
begin
if CheckBox1.Checked then begin

with ADOQuery1 do //diðerlerinin filtreden etkilenmemesi için adoquery2 den çekiyoruz filtreli kayýtlarý
begin
close;
sql.Text:=  'select * from musteriler where YUKLEME_TARIHI between "'+datetostr(dateTimePicker1.date)+'"and"'+datetostr(dateTimePicker2.date)+'" order by TOPLAM_BORC  asc' ;
open;
end;

RvProject1.execute;

end;

If checkbox2.Checked then begin
ShowMessage('2');
end;

If checkbox3.Checked then begin
ShowMessage('3');
end;

If checkbox4.Checked then begin
ShowMessage('4');
end;

end;





